<% if signed_in? %>
  
    <div class="main">
      <%= render 'shared/feed'%>
    </div>
  
<% else %>

    <% content_for :stylesheets do %>
      #navbar {display: none}
  
    <% end %>

    <div class="row">
      <div class="span3 offset1">
          <%= image_tag("golpo_full_res.png") %>
          
          <%= form_for(:session, url: sessions_path) do |f| %>
          <%= f.label :email %>
          <%= f.text_field :email %>
          <%= f.label :password %>
          <%= f.password_field :password %>
          <p><%= f.submit "Sign in", class: "btn btn-medium btn-primary" %></p>
          <% end %>
          <p>New user? <%= link_to "Sign up now!", signup_path %></p>
      </div>
      <div class="span6 offset1">
          <%= image_tag("iphone_ipad.jpg") %>
          
      </div>

    </div>
    <div class="row" id="signup_splash">
      <div class="span9 offset3">
    
            <h3>Create and discover amazing content everyday </h3>
      </div>
    </div>    

<% end %>