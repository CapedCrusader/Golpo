<div id="editable_container" >
  <div id="header">
    <div id="headerLeft">
      <div id="keyone" >
        <%= simple_format(@show_data["keyone"]) %>
      </div>  
      <div id="keytwo" >
        <%= simple_format(@show_data["keytwo"]) %>
      </div>     
    </div>
    
    <div id="headerRight" >
      <div>
        <%if (@urls[0]) %>
                <p>
                    
                    <button id="toggle-fullscreen" class="btn btn-small btn-primary" data-toggle="button">Toggle Fullscreen</button>
                </p>
            
                <div id="gallery" data-toggle="modal-gallery" data-target="#modal-gallery">
                  <% for upload in @urls %>
                      <a rel=gallery><%= link_to image_tag(upload, :size => "100x100"), upload, :data => {:gallery => 'gallery'} %></a>
                  <% end %>
              
                </div>

                <div id="modal-gallery" class="modal modal-gallery hide fade" tabindex="-1">
                    <div class="modal-header">
                        <a class="close" data-dismiss="modal">&times;</a>
                        <h3 class="modal-title"></h3>
                    </div>
                    <div class="modal-body"><div class="modal-image"></div></div>
                    <div class="modal-footer"></div>
                </div>
          <% end %>
        </div>

        <div id="youtube" >
         <%if (@youtube != "") %> 

         <a href="#myModal2" role="button" class="btn btn-small btn-success" data-toggle="modal">Click for video</a>
   
          <!-- Modal -->
          <div id="myModal2" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            
            <div class="modal-body">
              <iframe width="520" height="360" src="<%= "http://www.youtube.com/embed/"+video(@youtube) %>" frameborder="0" allowfullscreen></iframe>
            </div>
            <div class="modal-footer">
              <button class="btn btn-small " data-dismiss="modal" aria-hidden="true" >Close</button>
              
            </div>
          
          
          </div>
         <% end %>
        </div>
    </div>
    
  </div>
  <div id="columns">
    <div id="column1" >
      <div id="keythree">
        <%= simple_format(@show_data["keythree"]) %>
        
        
      </div>
      
    </div>
    <div id="column2" >
      <div id="keyfour" >
        <%= simple_format(@show_data["keyfour"]) %>
      </div>
      <div id="keyfive" >
        <%if (strip_tags(@show_data["keyfive"]) != "") %> 
        <a href="#myModal1" role="button" class="btn btn-small btn-success" data-toggle="modal">Click for details</a>
 
        <!-- Modal -->
        <div id="myModal1" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          
          <div class="modal-body">
            <p><%= simple_format(@show_data["keyfive"]) %></p>
          </div>
          <div class="modal-footer">
            <button class="btn btn-small" data-dismiss="modal" aria-hidden="true">Close</button>
            
          </div>
        </div>
        
        <% end %>
      </div>

    </div>

    <div id="column3" >
      <div id="keysix" >
        <%= simple_format(@show_data["keysix"]) %>
        
      </div>

      


  </div>
  
</div>





