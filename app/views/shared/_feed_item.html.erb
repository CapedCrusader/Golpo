<div id="<%= feed_item.id %>" class="box col"> 
  
    <span class="user"> 
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <span class="content"><%= feed_item.title %></span>
    
    <aside ><%= image_tag feed_item.photo.url if feed_item.photo? %></aside>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span >
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method:  :destroy, confirm: "You sure?", :remote => true, title:  feed_item.title %>
    <%= link_to "show", :controller => "posts", :action => "show", :id => feed_item %>
  <% end %>
</div>
