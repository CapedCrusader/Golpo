<%= form_for(@post, :html => {:multipart => true})  do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field form-actions textarea">
  <p>
    <%= f.text_field :title, placeholder: "Title" %>
    <%= f.text_area :content, placeholder: "Your thoughts ..." %>
  </p>     
    <%= f.file_field :photo %>
  </div>
  <%= f.submit "Post", class: "actions btn btn-large btn-primary" %>
  
<% end %>
